# ========================================
# DATABASE CONFIGURATION
# ========================================
# Get your MongoDB connection string from: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/focusflow?retryWrites=true&w=majority

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# Generate a strong random string for JWT secret (32+ characters)
JWT_SECRET=your_super_secret_jwt_key_change_this_to_something_random_and_secure

# JWT token expiration (e.g., 7d, 1h, 30m)
JWT_EXPIRES_IN=7d

# ========================================
# AI INTEGRATION
# ========================================
# Get your Gemini API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# EMAIL SERVICE (RESEND)
# ========================================
# Get your Resend API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# ========================================
# APPLICATION SETTINGS
# ========================================
# Your app URL (used for email links, etc.)
# For production, set to your actual domain
NEXT_PUBLIC_APP_URL=http://localhost:3000
